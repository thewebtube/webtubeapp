<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="0dip" android:color="@color/black" />
            <gradient android:angle="-90" android:startColor="@color/btn" android:endColor="#1A237E"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="0dip" android:color="#5e7974" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="0dip" android:color="@color/black" />
            <gradient android:angle="-90" android:startColor="@color/btn" android:endColor="@color/btn" />
        </shape>
    </item>
</selector>